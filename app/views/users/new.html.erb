<h1>Sign up</h1>

  <% if @user.errors%>
    <% @user.errors.full_messages.each do |msg| %>
    <%= msg.inspect %>
    <br/>
    <br/>
    <br/>
    <% end %>
  <% end %>

  <% flash.each do |key, value| %> 
    <%= value %>
  <% end %>

  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br/>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br/>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br/>
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
    <br/>
    <%= f.submit "Create my account" %>
  <% end %>